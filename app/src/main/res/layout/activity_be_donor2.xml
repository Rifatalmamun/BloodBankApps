<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="4"
    tools:context=".BeDonor2Activity">

    <LinearLayout
        android:padding="10dp"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:drawablePadding="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="Email "
                android:textColor="#000000"
                android:gravity="fill_vertical"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/emailEditText_id"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="enter email address"
                android:textColor="#a70b0b"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="Password "
                android:textColor="#000000"
                android:gravity="fill_vertical"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/passwordEditText_id"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="enter passwrod"
                android:textColor="#a70b0b"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:text="Re-enter "
                android:textColor="#000000"
                android:gravity="fill_vertical"
                android:textSize="17sp" />
            <EditText
                android:id="@+id/passwordReEditText_id"
                android:layout_weight=".7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Enter Name"
                android:textColor="#a70b0b"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/beDonor2SubmitButton"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#ffffff"
        android:layout_margin="20dp"
        android:background="@drawable/searchbuttonbackground"
        />



</LinearLayout>